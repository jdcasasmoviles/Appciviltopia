<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bgcolor"
    tools:context="com.jdcasas.appciviltopia.GeoReceptores">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView2" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textSize="15dp"
            android:id="@+id/textViewGeoReceptores"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_corners_azul"
            android:layout_marginBottom="15dp"
            android:textColor="#ffffff"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Provincia"
                    android:id="@+id/textViewProvincia"
                    android:background="@drawable/rounded_corners_textview"
                    android:layout_marginTop="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerProvinciaGeoReceptores"
                    android:spinnerMode="dropdown"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/spinnerletra"
                    android:layout_marginTop="20dp"
                    />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton8"
                    android:src="@drawable/buscar"
                    android:background="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:onClick="botonBuscarGeoReceptores" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton10"
                    android:src="@android:drawable/ic_menu_revert"
                    android:background="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:onClick="botonVolverGeoReceptores" />
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/imageView"
            android:src="@drawable/mapa_receptores"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="336dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp" />
    </LinearLayout>
</ScrollView>

</RelativeLayout>
